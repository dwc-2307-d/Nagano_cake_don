<div class="genre">
  <div class='container'>
    <div class='row'>
      <div class='col-md-4'>
        <h4 class="mr-5 mt-5">ジャンル一覧・追加</h4>
        <div class="row">
          <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
            <p class="genre ml-3">ジャンル名</p>
            <p class="ml-3">
              <%= f.text_field :name %>
              <%= f.submit '新規登録', class: "btn", style: "background-color: #32cd32; color: white; mx-3" %>
            </p>
          <% end %>
        </div>
        <div class="genres">
          <div class="d-flex justify-content-center">
            <table class='table table-hover table-inverse'>
              <tr>
                <th class="mr-5">ジャンル</th>
                <th></th>
              </tr>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn", style: "background-color: #32cd32; color: white; mx-3" %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
