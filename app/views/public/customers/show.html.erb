<div class="container cake-font">
  <h4>マイページ</h4>

  <div class="row">
    <div class="col-md-6">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>登録情報</h3>
        <%= link_to "編集する", customers_information_edit_path, class:"btn", style: "background-color: #64CCC5; color: white;" %>
      </div>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= @customer.full_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.full_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>

      <div class="d-flex justify-content-between align-items-center mb-5">
        <h3><b>配送先</b></h3>
        <%= link_to "一覧を見る", addresses_path, class: "btn", style: "background-color: #9AC5F4; color: white;" %>
      </div>
      <div class="d-flex justify-content-between align-items-center mb-5">
        <h3><b>注文履歴</b></h3>
        <%= link_to "一覧を見る", orders_path, class: "btn", style: "background-color: #9AC5F4; color: white;" %>
      </div>
    </div>
  </div>
</div>
