<h1>ショッピングカート</h1>
<%= link_to 'カートを空にする', empty_cart_items_path, method: :delete, data: { confirm: 'カートを空にしてもよろしいですか?' } %>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>個数</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td>
          <%= form_tag update_quantity_cart_item_path(cart_item), method: :put do %>
            <%= number_field_tag 'quantity', cart_item.quantity, min: 1 %>
            <%= submit_tag '更新' %>
          <% end %>
        </td>
        <td><%= number_to_currency(cart_item.total_price, unit: "¥", format: "%u%n", precision: 0) %></td>
        <td><%= link_to '削除する', cart_item, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '買い物に戻る', root_path %>

<p>合計金額: <%= number_to_currency(@cart_items.sum(&:total_price), unit: "¥", format: "%u%n", precision: 0) %></p>

