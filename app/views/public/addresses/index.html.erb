<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">配送先登録/一覧</h4>

      <%= render "layouts/error_messages", obj: @address %>

      <%= render "form", address: @address %>

      <table class="table table-bordered">
        <thead class="bg-ligth">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class:"btn", style: "background-color: #64CCC5; color: white;" %>
              <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger", data: { confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>