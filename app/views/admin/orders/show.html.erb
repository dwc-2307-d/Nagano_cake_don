注文履歴詳細

<%= form_with model: @order, url: admin_orders_path, method: :patch, local: true do |f| %>
  <table>
    <tr>
      <td>購入者</td>
      <td>
        <%= link_to admin_customer_path(@order.customer), class: "link" do %>
          <%= @order.customer.full_name %></td>
        <% end %>
    </tr>

    <tr>
      <td>注文日</td>
      <td><%= l @order.created_at %></td>
    </tr>

    <tr>
      <td>配送先</td>
      <td><%= @order.post_code%>
          <%= @order.address %>
          <%= @order.name %></td>
    </tr>

    <tr>
      <td>支払い方法</td>
      <td><%= @order.payment_method_i18n%></td>
    </tr>

    <tr>
      <td>注文ステータス</td>
      <td>
        <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
             <%= f.select :status, Order.statuses_i18n.invert, {}, class:"form-control col-10" %>
              <%= f.submit '更新', class:"btn col-10", style: "background-color: #64CCC5; color: white;" %>
           <% end %>
      </td>
    </tr>
  </table>
<% end %>

<table>
  <tr>
    <td>商品名</td>
    <td>単価(税込)</td>
    <td>数量</td>
    <td>小計</td>
    <td>製作ステータス</td>
  </tr>
<% @order_items.each do |order_item| %>

<% @sum = 0 %>
<% @sum += order_item.tax_price %>

<%= form_with model: order_item , url: admin_order_item_path(order_detail.id) , method: :patch , local: true do |f| %>
    <table>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.tax_price %></td>
          <td>
            <%= f.select :manufacture_status, OrderItem.manufacture_statuses_i18n.invert %>
            <%= f.submit "更新", class: "btn btn-success" %>
          </td>
        </tr>
      <% end %>
      <tr>
        <td>商品合計</td>
        <td><%= @sum %>円</td>
      </tr>
      <tr>
        <td>送料</td>
        <td>800円</td>
      </tr>
      <tr>
        <td>請求金額合計</td>
        <td><%= @sum + 800 %>円</td>
      </tr>
  </table>
<% end %>
