<h4>マイページ</h4>

  <h1 class="my-3 ml-3">登録情報</h1>

    <div class="col-5 ml-3">
        <table class="table table-bordered">

            <tbody>
                <tr>
                    <td>氏名</td>
                    <td><%= @customer.full_name %></td>
                </tr>
                <tr>
                    <td>カナ</td>
                    <td><%= @customer.full_name_kana %></td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td><%= @customer.post_code %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= @customer.address %></td>
                </tr>
                <tr>
                    <td>電話番号</td>
                    <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= @customer.email %></td>
                </tr>
            </tbody>
        </table>

        <div>
          <h3>配送先</h3>

        </div>

        <div>
          <h3>注文履歴</h3>

        </div>

    </div>