<div class="container">
  <h2>注文履歴一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order), class: "text-decoration-none" do %>
              <%= l order.created_at %>
            <% end %>
          </td>
          <td>
            <%= "#{order.customer.full_name} #{order.address}" %>
          </td>
          <td>
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br>
            <% end %>
          </td>
          <td><%= order.total_amount %>円</td>
          <td><%= t("enums.order.order_status.#{order.status}") %></td>
          <td>
            <%= link_to "詳細", order_path(order), class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>