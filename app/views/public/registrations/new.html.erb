<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-4">新規会員登録</h2>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table class="table table-borderless">
          <tr>
            <td>名前</td>
            <td>(姓)<%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
                (名)<%= f.text_field :first_name, placeholder: "萌るも" %></td>
          </tr>

          <tr>
            <td>フリガナ</td>
            <td>(セイ)<%= f.text_field :last_name_kana, placeholder: "レイワ"%>
                (メイ)<%= f.text_field :first_name_kana, placeholder: "メルモ" %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, placeholder: "sample@example.com" %></td>
          </tr>

          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :post_code, placeholder: "0000000" %></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
          </tr>

          <tr>
            <td>電話番号(ハイフンなし)</td>
            <td><%= f.text_field :telephone_number, placeholder: "00000000000" %></td>
          </tr>

          <tr>
            <td>パスワード
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %>
            </td>
            <td><%= f.text_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td>パスワード(確認用)</td>
            <td><%= f.text_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class:"btn", style: "background-color: #9AC5F4; color: white;" %></td>
          </t>
        </table>

        <h4>既に登録済みの方</h4>
        <%= render "public/shared/links" %>からログインしてください。
      <% end %>
    </div>
  </div>
</div>