<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4 class="my-4">商品説明</h4>
      <%= image_tag @item.image, size:"300x200" %>
    </div>
    <div class="col-md-8 mt-5">
      <table class="table table-borderless">
        
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        
        <tr>
          <td>商品説明</td>
          <td><%= @item.description %></td>
        </tr>
        
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
              
          </td>
        </tr>
        
        <tr>
          <td>販売ステータス</td>
          <td><%= @item.item_status %></td>
        </tr>
        
        <tr>
          <td>
            <td><%= link_to"編集する",edit_admin_item_path(@item), class: "btn", style:"background-color: #32cd32; color:white; mx-3" %></td>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>